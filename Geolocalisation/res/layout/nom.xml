<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back5"
    android:orientation="vertical" >

    

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="inserer le nom de l&apos;hotel/l&apos;aeroport:"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/nomentry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="hotel ou aeroport" />

    <RadioGroup
        android:id="@+id/group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nomentry"
        android:layout_below="@+id/nomentry" 
        android:checkedButton="@+id/nimrb1"
        >

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nomentry"
            android:layout_below="@+id/nomentry"
            android:layout_marginTop="16dp"
             android:text="hotel"
             android:checked="true" />

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nomrb1"
            android:layout_centerVertical="true"
            android:text="aeroport" />
    </RadioGroup>
    <Button
        android:id="@+id/chercher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/group"
        android:layout_below="@+id/group"
        android:layout_marginTop="52dp"
        android:background="@drawable/chercher" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chercher"
        android:layout_below="@+id/group"
        android:text="map" 
        android:id="@+id/map"/>
</RelativeLayout>